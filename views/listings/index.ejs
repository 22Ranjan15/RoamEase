<script>
    function scrollFilters(direction) {
        const container = document.getElementById('filters');
        const scrollAmount = 300;
        
        if (direction === 'left') {
            container.scrollLeft -= scrollAmount;
        } else {
            container.scrollLeft += scrollAmount;
        }
        
        updateScrollButtons();
    }

    function updateScrollButtons() {
        const container = document.getElementById('filters');
        const leftBtn = document.getElementById('scrollLeft');
        const rightBtn = document.getElementById('scrollRight');
        
        // Check if we can scroll left
        leftBtn.disabled = container.scrollLeft <= 0;
        
        // Check if we can scroll right
        rightBtn.disabled = container.scrollLeft >= (container.scrollWidth - container.clientWidth);
    }

    // Initialize scroll buttons on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateScrollButtons();
        
        // Update buttons when scrolling
        document.getElementById('filters').addEventListener('scroll', updateScrollButtons);
        
        // Update buttons on window resize
        window.addEventListener('resize', updateScrollButtons);
    });

    // Switch for displaying total after taxes
    let taxSwitch = document.getElementById('switchCheckDefault');
    
    // Store original prices when page loads
    let originalPrices = {};
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.listing-card .card-text').forEach((card, index) => {
            let cardHTML = card.innerHTML;
            let priceMatch = cardHTML.match(/(\d[\d,]*)/);
            if (priceMatch) {
                originalPrices[index] = priceMatch[0];
            }
        });
    });
    
    taxSwitch.addEventListener('change', function() {
        if (this.checked) {
            // Logic to display total after taxes (GST included)
            document.querySelectorAll('.listing-card .card-text').forEach((card, index) => {
                let cardHTML = card.innerHTML;
                let titleMatch = cardHTML.match(/<b>(.*?)<\/b>/);
                let title = titleMatch ? titleMatch[0] : '';
                
                if (originalPrices[index]) {
                    let price = parseFloat(originalPrices[index].replace(/,/g, ''));
                    let totalWithTax = (price * 1.18).toLocaleString("en-IN");
                    card.innerHTML = `${title} <br>&#x20B9;${totalWithTax} /night (incl. 18% GST)`;
                }
            });
        } else {
            // Logic to revert to original price display (with GST note)
            document.querySelectorAll('.listing-card .card-text').forEach((card, index) => {
                let cardHTML = card.innerHTML;
                let titleMatch = cardHTML.match(/<b>(.*?)<\/b>/);
                let title = titleMatch ? titleMatch[0] : '';
                
                if (originalPrices[index]) {
                    card.innerHTML = `${title} <br>&#x20B9;${originalPrices[index]} /night <i style="font-size: 0.75rem; color: #6c757d;">+ 18% GST</i>`;
                }
            });
        }
    });
</script>

<!-- Results Info -->
<% if (selectedCategory) { %>
    <div class="results-info <%= allListings.length === 0 ? 'no-results' : '' %>">
