            <span class="category-icon">
                <i class="fa-solid fa-filter"></i>
            </span>
            <%= selectedCategory.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
            <span class="results-count">
                <%= allListings.length %> <%= allListings.length === 1 ? 'listing' : 'listings' %>
            </span>
        </div>
        <% if (allListings.length === 0) { %>
            <div style="margin-top: 0.5rem; opacity: 0.9;">
                <i class="fa-solid fa-info-circle"></i> No properties match this category. Try browsing other categories!
            </div>
        <% } %>
    </div>
<% } %>

<!-- Listings Section -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 not-listing">
    <% if (allListings.length === 0) { %>
        <div class="no-results-container text-center py-4 d-flex flex-column align-items-center justify-content-center"
            style="background: linear-gradient(135deg, #868e96 0%, #adb5bd 100%); border-radius: 20px; box-shadow: 0 8px 25px rgba(0,0,0,0.08); min-height: 40vh; margin-bottom:2rem;">
            <div class="mb-3">
                <i class="fa-solid fa-search" style="font-size: 2.5rem; color: #495057;"></i>
            </div>
            <h3 class="mb-2 fw-bold" style="color:#343a40; font-size:1.3rem;">No Results Found</h3>
            <p class="mb-3" style="color:#495057; font-size:0.95rem; max-width:500px; margin:auto;">
                <% if (selectedCategory) { %>
                    We couldn't find any properties in the "<%= selectedCategory.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %>" category.
                    Try exploring other categories or browse all available listings.
                <% } else { %>
                    It looks like there are no listings available at the moment. Check back later for new properties!
                <% } %>
            </p>
            <div class="d-flex gap-2 justify-content-center">
                <a href="/listings" class="no-listings-btn">
                    Explore All Listings
                </a>
            </div>
        </div>
    <% } else { %>
    <!-- Results Grid -->
        <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card col">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            <% if (listing.price) { %>
                                &#x20B9;<%= listing.price.toLocaleString("en-IN") %> /night 
                                <i style="font-size: 0.75rem; color: #6c757d;">+ 18% GST</i>
                            <% } else { %>
                                Price not available
                            <% } %>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
        
        <!-- Pagination could be added here if needed -->
        <% if (allListings.length >= 12) { %>
            <div class="text-center mt-4">
                <p class="text-muted">Showing all <%= allListings.length %> results</p>
            </div>
