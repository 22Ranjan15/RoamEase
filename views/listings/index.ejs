<% layout("/layouts/boilerplate") %>

<style>
    .filter-container {
        position: relative;
        margin: 1rem auto;
        max-width: 1200px;
        width: 90%;
    }

    .filter-wrapper {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
        background: white;
        border: 1px solid #e9ecef;
        border-radius: 20px;
        padding: 0 30px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }

    .filters-section {
        display: flex;
        align-items: center;
        flex: 1;
        position: relative;
        max-width: 75%;
    }

    .scroll-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: white;
        border: 1px solid #ddd;
        border-radius: 50%;
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 10;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

    .scroll-btn:hover {
        background: #f8f9fa;
        border-color: #fe424d;
        color: #fe424d;
    }

    .scroll-btn.left {
        left: 8px;
    }

    .scroll-btn.right {
        right: 8px;
    }

    .scroll-btn:disabled {
        opacity: 0.3;
        cursor: not-allowed;
        background: #f5f5f5;
    }

    .scroll-btn i {
        font-size: 0.8rem;
    }

    #filters {
        display: flex;
        gap: 0.8rem;
        align-items: center;
        overflow-x: hidden;
        scroll-behavior: smooth;
        padding: 12px 0;
        white-space: nowrap;
    }

    .filter {
        display: flex;
        flex-direction: column;
        align-items: center;
        opacity: 0.7;
        text-decoration: none;
        color: inherit;
        padding: 0.5rem 0.6rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        min-width: 60px;
        flex-shrink: 0;
        border: 1px solid transparent;
    }
    
    .filter:hover {
        opacity: 1;
        cursor: pointer;
        background-color: #f8f9fa;
        transform: translateY(-1px);
        text-decoration: none;
        color: inherit;
        border-color: #e9ecef;
    }
    
    .filter.active {
        opacity: 1;
        background-color: #fe424d;
        color: white;
        border-color: #fe424d;
    }
    
    .filter p {
        font-size: 0.65rem;
        margin: 0.2rem 0 0 0;
        font-weight: 600;
        text-align: center;
        white-space: nowrap;
    }
    
    .filter i {
        font-size: 1rem;
        margin-bottom: 0.1rem;
    }

    /* Clear Filter Styling */
    .clear-filter {
        background-color: #ffc107;
        color: #212529;
        opacity: 1;
        border-color: #ffc107;
    }

    .clear-filter:hover {
        background-color: #e0a800;
        border-color: #e0a800;
        color: #212529;
        transform: translateY(-1px);
    }

    /* Hide scrollbar */
    #filters::-webkit-scrollbar {
        display: none;
    }
    
    #filters {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    /* Results Info Styling */
    .results-info {
        background: linear-gradient(135deg, #fe424d 0%, #ff6b6b 100%);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 15px;
        margin: 1rem 0;
        border: none;
        box-shadow: 0 4px 15px rgba(254, 66, 77, 0.2);
        position: relative;
        overflow: hidden;
    }

    .results-info::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(255,255,255,0.1) 25%, transparent 25%, transparent 75%, rgba(255,255,255,0.1) 75%), 
                    linear-gradient(45deg, rgba(255,255,255,0.1) 25%, transparent 25%, transparent 75%, rgba(255,255,255,0.1) 75%);
        background-size: 20px 20px;
        background-position: 0 0, 10px 10px;
        opacity: 0.3;
        pointer-events: none;
    }

    .results-info .category-name {
        font-weight: 700;
        font-size: 1.1rem;
        text-transform: capitalize;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .results-info .category-icon {
        background: rgba(255,255,255,0.2);
        padding: 0.3rem;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .results-info .results-count {
        background: rgba(255,255,255,0.15);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-left: 1rem;
        display: inline-block;
    }

    .no-results {
        background: linear-gradient(135deg, #6c757d 0%, #868e96 100%);
    }

    /* No Listings Found Styling */
    .not-listing {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 40vh;
        width: 100%;
    }

    .no-listings-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 40vh;
        width: 100%;
    }

    .no-listings-container {
        text-align: center;
        padding: 4rem 2rem;
        margin-bottom: 3rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 20px;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

    .no-listings-container::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(254, 66, 77, 0.05) 0%, transparent 70%);
        animation: pulse 4s ease-in-out infinite;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.3; }
        50% { transform: scale(1.1); opacity: 0.1; }
    }

    .no-listings-icon {
        font-size: 4rem;
        color: #fe424d;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 2;
    }

    .no-listings-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1rem;
        position: relative;
        z-index: 2;
    }

    .no-listings-message {
        font-size: 1.1rem;
        color: #6c757d;
        margin-bottom: 2rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.6;
        position: relative;
        z-index: 2;
    }

    .no-listings-btn {
        background: linear-gradient(135deg, #fe424d 0%, #ff6b6b 100%);
        color: white;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 15px rgba(254, 66, 77, 0.3);
        position: relative;
        z-index: 2;
    }

    .no-listings-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(254, 66, 77, 0.4);
        text-decoration: none;
        color: white;
    }

    /* Tax Toggle Styling */
    .vertical-divider {
        width: 2px;
        height: 50px;
        background: linear-gradient(to bottom, transparent, rgba(233, 236, 239, 0.8) 20%, rgba(233, 236, 239, 0.8) 80%, transparent);
        margin: 0 1rem;
        flex-shrink: 0;
    }

    .tax-toggle-container {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 0.5rem 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        white-space: nowrap;
        min-width: 200px;
    }

    .tax-toggle {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        width: 100%;
    }

    .tax-toggle .form-check-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: #495057;
        margin: 0;
        cursor: pointer;
        user-select: none;
    }

    .tax-toggle .form-check-input {
        width: 2rem;
        height: 1rem;
        background-color: #e9ecef;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .tax-toggle .form-check-input:checked {
        background-color: #fe424d;
        border-color: #fe424d;
    }

    .tax-toggle .form-check-input:focus {
        border-color: #fe424d;
        box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.25);
    }

    /* Responsive adjustments */
    @media (max-width: 1200px) {
        .tax-toggle-container {
            min-width: 180px;
        }
        
        .tax-toggle .form-check-label {
            font-size: 0.7rem;
        }
    }

    @media (max-width: 992px) {
        .filters-section {
            max-width: 70%;
        }
        
        .tax-toggle-container {
            min-width: 160px;
            padding: 0.4rem 0.8rem;
        }
        
        .tax-toggle .form-check-label {
            font-size: 0.65rem;
        }
        
        .tax-toggle .form-check-input {
            width: 1.8rem;
            height: 0.9rem;
        }
    }

    @media (max-width: 768px) {
        .filter-wrapper {
            flex-direction: column;
            gap: 1rem;
            padding: 1rem;
        }

        .filters-section {
            max-width: 100%;
        }

        .vertical-divider {
            display: none;
        }
        
        .tax-toggle-container {
            margin-left: 0;
            width: 100%;
            max-width: 400px;
            justify-content: center;
            padding: 0.8rem 1.5rem;
            min-width: auto;
        }
        
        .tax-toggle .form-check-label {
            font-size: 0.85rem;
        }
        
        .tax-toggle .form-check-input {
            width: 2.2rem;
            height: 1.1rem;
        }
    }

    @media (max-width: 480px) {
        .tax-toggle-container {
            max-width: 100%;
            padding: 0.7rem 1rem;
        }
        
        .tax-toggle .form-check-label {
            font-size: 0.8rem;
        }
        
        .tax-toggle {
            gap: 0.5rem;
        }
    }
</style>

