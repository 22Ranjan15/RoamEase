<% layout("/layouts/boilerplate.ejs") %>

<!-- JS code for Map -->
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const coordinates = "<%- JSON.stringify(listing.geometry.coordinates) %>";
    const listingLocation = "<%= listing.location %>";
    const listingCountry = "<%= listing.country %>";
</script>

<div class="row mt-3 justify-content-center">
    <div class="col-lg-8 col-md-10 col-12">
        <!-- Listing Title -->
        <h3 class="mb-3"><%= listing.title %></h3>
        
        <!-- Listing Details -->
        <div class="card mb-4 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text"><i>Posted by <%= listing.owner.username %></i></p>
                <p class="card-text"><%= listing.description %></p>
                <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> /night</p>
                <p class="card-text"><%= listing.location %></p>  
                <p class="card-text"><%= listing.country %></p>
            </div>
        </div>
        
        <!-- Buttons -->
        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="d-flex gap-4 mb-4">
                <!-- Edit Button -->
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>

                <!-- Delete Button -->
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark delete-btn">Delete</button>
                </form>
            </div>
        <% } %>

        <!-- Add Reviews -->
        <% if(currUser) { %>
            <hr>
            <div class="mb-3">
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                    <!-- Rating -->
                    <div class="mb-3 mt-3">
                        <label for="ratig" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input 
                                type="radio" 
                                id="no-rate" 
                                class="input-no-rate" 
                                name="review[rating]" 
                                value="1" 
                                checked 
                                aria-label="No rating." 
                            />
                            
                            <input 
                                type="radio" 
                                id="first-rate1" 
                                name="review[rating]" 
                                value="1" 
                            />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            
                            <input 
                                type="radio" 
                                id="first-rate2" 
                                name="review[rating]" 
                                value="2" 
                            />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            
                            <input 
                                type="radio" 
                                id="first-rate3" 
                                name="review[rating]" 
                                value="3" 
                            />
                            <label for="first-rate3" title="Average">3 stars</label>
                            
                            <input 
                                type="radio" 
                                id="first-rate4" 
                                name="review[rating]" 
                                value="4" 
                            />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            
                            <input 
                                type="radio" 
                                id="first-rate5" 
                                name="review[rating]" 
                                value="5" 
                            />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <!-- Comment -->
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea 
                            name="review[comment]" 
                            id="comment" 
                            rows="2" 
                            class="form-control" 
                            required
                        ></textarea>
                        <div class="invalid-feedback">Please add some comment</div>
                    </div>
                
                    <!-- Submit Button -->
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
            </div>
        <% } %>
        
        <!-- Show Reviews -->
        <% if(listing.reviews.length > 0) { %>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row justify-content-center">
                <% for(review of listing.reviews) {%>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">

                            <!-- Review Author and Rating -->
                            <div class="d-flex justify-content-between mb-2 mt-2">
                                <div class="d-flex flex-wrap align-items-center gap-2">
                                    <!-- User Title -->
                                    <div class="me-auto">
                                        <h6 class="mb-0 card-title"><b>&#64;<%= review.author.username %></b></h6>
                                    </div>

                                    <!-- Star Rating -->
                                    <div class="d-flex align-items-center">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <% if(i <= review.rating) { %>
                                                <i class="bi bi-star-fill text-warning"></i>
                                            <% } else { %>
                                                <i class="bi bi-star text-muted"></i>
                                            <% } %>
                                        <% } %>
                                        <span class="ms-1">(<%= review.rating %>)</span>
                                    </div>

                                </div>
                            </div>
                            
                            <!-- Comment -->
                            <p class="card-text"><%= review.comment %></p>

                        </div>

                        <!-- Delete Comment Button -->
                        <form class="mb-3 mt-1" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-outline-dark">Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>
        <% } %>

        <!-- Show Map -->
        <hr>
        <div class="mb-3">
            <h4>Where you'll be</h4>
            <div id="map"></div>
        </div>
    </div>
</div>

<!-- Public JS File for Map -->
<script src="/js/map.js"></script>

